<section id="donate">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="bold text-center">Donate</h1>
        <p class="text-center">Donate and helps project growth.</p>
        <br />

        <div class="col-md-6 col-md-offset-3">
          <div class="panel panel-default">
            <div class="panel-body">
              <%= form_for(@donation) do |f| %>

                <div class="field">
                  <%= f.label :name, 'Name' %>
                  <%= f.text_field :name, class: 'form-control', required: 'required',
                                   placeholder: 'Your name', autocomplete: 'off' %>
                </div>

                <div class="field">
                  <%= f.label :email, 'E-mail' %>
                  <%= f.text_field :email, class: 'form-control', required: 'required',
                                   placeholder: 'Your e-mail', autocomplete: 'off' %>
                </div>

                <div class="field">
                  <%= f.label :amount, 'Amount' %>
                  <%= f.number_field :amount, class: 'form-control', required: 'required',
                                     placeholder: 'Donation amount', value: 5.0 %>
                </div>

                <div class="actions"><br />
                  <div class="text-center">
                    <%= f.submit 'Donate', class: 'btn btn-primary btn-lg' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>