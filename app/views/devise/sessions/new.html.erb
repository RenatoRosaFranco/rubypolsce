<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <h2 class="bold text-center">Log in</h2>
              <p class="text-center">Login into your account.</p>
              <hr />

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email, 'E-mail' %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: 'form-control', required: 'required' %>
                </div>

                <div class="field">
                  <%= f.label :password, 'Password' %><br />
                  <%= f.password_field :password, autocomplete: "current-password",
                  class: 'form-control', required: 'required' %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field"><br />
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Remember me' %>
                  </div>
                <% end %>

                <div class="actions"><br />
                  <%= f.submit "Log in", class: 'btn btn-primary btn-lg full-width' %>
                </div>
              <% end %>

              <hr />
              <div class="text-center">
                <%= render "devise/shared/links" %>
              </div>
              <hr />

              <%= link_to '#', class: 'btn btn-default btn-lg full-width top' do %>
                <i class="fa-brands fa-github pull-left"></i>
                Login with Github
              <% end %>

              <%= link_to '#', class: 'btn btn-default btn-lg full-width top' do %>
                <i class="fa-brands fa-facebook pull-left"></i>
                Login with Facebook
              <% end %>

              <%= link_to '#', class: 'btn btn-default btn-lg full-width top' do %>
                <i class="fa-brands fa-google pull-left"></i>
                Login with Google
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

